# ===========================================
# RAG Platform Environment Configuration
# ===========================================

# Application
NODE_ENV=development
PORT=3001

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_RAW=raw-videos
AZURE_STORAGE_CONTAINER_PROCESSED=processed
AZURE_STORAGE_CONTAINER_TRANSCRIPTS=transcripts
AZURE_STORAGE_CONTAINER_SUMMARIES=summaries
AZURE_STORAGE_CONTAINER_EMBEDDINGS=embeddings

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=
AZURE_SERVICE_BUS_QUEUE_VIDEO=video-jobs
AZURE_SERVICE_BUS_QUEUE_DOCUMENT=document-jobs
AZURE_SERVICE_BUS_QUEUE_AUDIO=audio-jobs

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# OpenAI (Fallback)
OPENAI_API_KEY=

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=rag-chunks

# Whisper (Speech-to-Text)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
